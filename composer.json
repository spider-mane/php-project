{
  "name": "webtheory/php-project",
  "type": "project",
  "description": "Simple starter package for any php project",
  "homepage": "https://github.com/spider-mane/php-project",
  "license": "MIT",
  "authors": [
    {
      "name": "Chris Williams",
      "email": "spider.mane.web@gmail.com",
      "homepage": "https://github.com/spider-mane",
      "role": "Developer"
    }
  ],
  "keywords": [
    "webtheory",
    "php-project",
    "php-skeleton",
    "php",
    "skeleton",
    "project",
    "starter"
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "behat/behat": "^3.10",
    "brainmaestro/composer-git-hooks": "^2.8",
    "captainhook/captainhook": "^5.10",
    "fakerphp/faker": "^1.16",
    "filp/whoops": "^2.5",
    "friendsofphp/php-cs-fixer": "^2.15",
    "maximebf/debugbar": "^1.17",
    "mockery/mockery": "^1.4",
    "nunomaduro/collision": "^5.3",
    "overtrue/phplint": "^3.0",
    "pdepend/pdepend": "^2.10",
    "php-parallel-lint/php-console-highlighter": "0.*",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "phpbench/phpbench": "@dev",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpmd/phpmd": "@stable",
    "phpspec/phpspec": "^7.1",
    "phpstan/phpstan": "^0.12.83",
    "phpunit/phpunit": "^9.5",
    "phpunit/phpunit-selenium": "^9.0",
    "psy/psysh": "^0.10.7",
    "spatie/phpunit-watcher": "^1.12",
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/error-handler": "^5.4",
    "symfony/var-dumper": "^5.4",
    "vimeo/psalm": "^4.7"
  },
  "autoload": {
    "psr-4": {
      "PseudoVendor\\PseudoPackage\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "spec": "vendor/bin/phpspec",
    "review": "vendor/bin/behat",
    "watch": "vendor/bin/phpunit-watcher",
    "check": "vendor/bin/phpcs",
    "fix": "vendor/bin/php-cs-fixer",
    "inspect": "vendor/bin/psalm",
    "lint": "vendor/bin/parallel-lint",
    "bench": "vendor/bin/phpbench",
    "shell": "vendor/bin/psysh",
    "collect": "vendor/bin/var-dump-server",
    "hooks": "vendor/bin/captainhook",
    "build": [
      "@fix",
      "@check",
      "@inspect",
      "@test",
      "@spec",
      "@review"
    ],
    "post-create-project-cmd": [
      "bin/composer-prefill"
    ]
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 0
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
