{
  "name": "webtheory/php-project",
  "type": "project",
  "description": "Simple starter package for any php project",
  "homepage": "https://github.com/spider-mane/php-project",
  "license": "MIT",
  "authors": [
    {
      "name": "Chris Williams",
      "email": "spider.mane.web@gmail.com",
      "homepage": "https://github.com/spider-mane",
      "role": "Developer"
    }
  ],
  "keywords": [
    "webtheory",
    "php-project",
    "php-skeleton",
    "php",
    "skeleton",
    "project",
    "starter"
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.4 || ^8.0",
    "symfony/polyfill-php80": "^1.23",
    "symfony/polyfill-php81": "^1.23"
  },
  "require-dev": {
    "behat/behat": "^3.10",
    "brainmaestro/composer-git-hooks": "^2.8",
    "captainhook/captainhook": "^5.10",
    "fakerphp/faker": "^1.16",
    "filp/whoops": "^2.5",
    "friendsofphp/php-cs-fixer": "^3.4",
    "maximebf/debugbar": "^1.17",
    "mockery/mockery": "^1.4",
    "monolog/monolog": "^2.0",
    "nunomaduro/collision": "^5.3",
    "oscarotero/env": "^2.1",
    "overtrue/phplint": "^3.0",
    "pdepend/pdepend": "^2.10",
    "php-parallel-lint/php-console-highlighter": "0.*",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "phpbench/phpbench": "@dev",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpmd/phpmd": "@stable",
    "phpspec/phpspec": "^7.1",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/phpstan": "^1.3",
    "phpunit/phpunit": "^9.5",
    "phpunit/phpunit-selenium": "^9.0",
    "psy/psysh": "^0.11",
    "rector/rector": "^0.12.20",
    "spatie/phpunit-watcher": "^1.12",
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/dependency-injection": "^5.4",
    "symfony/error-handler": "^5.4",
    "symfony/thanks": "^1.1",
    "symfony/var-dumper": "^5.4",
    "vimeo/psalm": "^4.7",
    "vlucas/phpdotenv": "^5.4",
    "webtheory/exterminate": "@stable"
  },
  "autoload": {
    "psr-4": {
      "PseudoVendor\\PseudoPackage\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "asset": "npm --prefix assets",
    "bench": "vendor/bin/phpbench",
    "check": "vendor/bin/phpcs",
    "collect": "vendor/bin/var-dump-server",
    "correct": "vendor/bin/phpcbf",
    "hooks": "vendor/bin/captainhook",
    "inspect": "vendor/bin/psalm",
    "lint": "vendor/bin/parallel-lint",
    "play": ".playground/console.php",
    "review": "vendor/bin/behat",
    "shell": "vendor/bin/psysh",
    "spec": "vendor/bin/phpspec",
    "test": "vendor/bin/phpunit",
    "test:acceptance": "@test --testsuite acceptance",
    "test:functional": "@test --testsuite functional",
    "test:integration": "@test --testsuite integration",
    "test:unit": "@test --testsuite unit",
    "watch": "vendor/bin/phpunit-watcher",
    "build": [
      "@style",
      "@check",
      "@inspect",
      "@test",
      "@spec",
      "@review"
    ],
    "setup": [
      "composer install",
      "cp -n .env.example .env",
      "php bin/build-paths",
      "php bin/make-playground"
    ],
    "style": [
      "vendor/bin/rector process",
      "vendor/bin/php-cs-fixer fix --verbose",
      "@correct"
    ],
    "post-create-project-cmd": [
      "bin/composer-prefill",
      "cp -n .env.example .env",
      "php bin/build-paths",
      "php bin/make-playground"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "process-timeout": 0,
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "symfony/thanks": true
    }
  },
  "extra": {
    "build-paths": {
      "build": {
        "phpunit": {},
        "php-cs-fixer": {}
      },
      "logs": {},
      "temp": {}
    }
  }
}
